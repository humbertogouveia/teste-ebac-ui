{
	"info": {
		"_postman_id": "70cff4a9-b341-42f5-9b15-b92511d712ec",
		"name": "Exercício EBAC API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Usuario",
			"item": [
				{
					"name": "ListarUsuarios",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Resposta de consulta deve ser 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Validar parametros do payload\", function () {",
									"    pm.expect(pm.response.text()).to.include(\"nome\",\"email\",\"password\",\"administrator,_id\");",
									"});",
									"",
									"pm.test(\"Tempo de resposta deve ser menor que 200ms\", function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(200);",
									"});",
									"",
									""
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{local}}/usuarios/",
							"host": [
								"{{local}}"
							],
							"path": [
								"usuarios",
								""
							]
						}
					},
					"response": []
				},
				{
					"name": "Cadastro",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Resposta de cadastro deve ser 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Corpo de resposta de possuir mensagem: Cadastro realizado com sucesso\", function () {",
									"    pm.expect(pm.response.text()).to.include(\"Cadastro realizado com sucesso\")",
									"    });",
									"",
									"const resposta = pm.response.json();",
									"pm.globals.set(\"_id\", resposta._id)",
									""
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nome\": \"Humberto Gouveiaa\",\n  \"email\": \"humbogouveia@teste.com\",\n  \"password\": \"teste\",\n  \"administrador\": \"true\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{local}}/usuarios",
							"host": [
								"{{local}}"
							],
							"path": [
								"usuarios"
							]
						}
					},
					"response": []
				},
				{
					"name": "Cadastrar usuário existente",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Resposta de consulta deve ser 400\", function () {",
									"    pm.response.to.have.status(400);",
									"});",
									"",
									"pm.test(\"Exibir mensagem ao usuário que este email já está sendo usado\", function () {",
									"    pm.expect(pm.response.text()).to.include(\"message\",\"Este email já está sendo usado\")",
									"});",
									"",
									"pm.test(\"Tempo de resposta deve ser menor que 200ms\", function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(200);",
									"});",
									"",
									""
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nome\": \"Humberto Gouveiaa\",\n  \"email\": \"humbogouveia@teste.com\",\n  \"password\": \"teste\",\n  \"administrador\": \"true\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{local}}/usuarios",
							"host": [
								"{{local}}"
							],
							"path": [
								"usuarios"
							]
						}
					},
					"response": []
				},
				{
					"name": "Buscar usuário por ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{local}}/usuarios/{{_id}}",
							"host": [
								"{{local}}"
							],
							"path": [
								"usuarios",
								"{{_id}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "DeletarUsuario",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Validar resposta de sucesso ao deletar usuário\", function () {",
									"    pm.expect(pm.response.text()).to.include(\"message\",\"Registro excluído com sucesso\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{local}}/usuarios/{{_id}}",
							"host": [
								"{{local}}"
							],
							"path": [
								"usuarios",
								"{{_id}}"
							]
						}
					},
					"response": []
				}
			]
		}
	]
}